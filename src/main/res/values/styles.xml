<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础主题 -->
    <style name="Theme.CafeteriaMenu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">#FF6200EE</item>
        <item name="colorPrimaryVariant">#FF3700B3</item>
        <item name="colorOnPrimary">#FFFFFFFF</item>
        
        <!-- 次要色调 -->
        <item name="colorSecondary">#FF03DAC5</item>
        <item name="colorSecondaryVariant">#FF018786</item>
        <item name="colorOnSecondary">#FF000000</item>
        
        <!-- 背景色 -->
        <item name="android:colorBackground">#FF121212</item>
        <item name="android:colorForeground">#FFFFFFFF</item>
        
        <!-- 字体 -->
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        
        <!-- TV特定样式 -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        
        <!-- 按钮样式 -->
        <item name="materialButtonStyle">@style/Widget.CafeteriaMenu.Button</item>
        
        <!-- 卡片样式 -->
        <item name="cardViewStyle">@style/Widget.CafeteriaMenu.CardView</item>
    </style>
    
    <!-- 全屏主题 -->
    <style name="Theme.CafeteriaMenu.FullScreen" parent="Theme.CafeteriaMenu">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
    
    <!-- 按钮组件样式 -->
    <style name="Widget.CafeteriaMenu.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- 卡片组件样式 -->
    <style name="Widget.CafeteriaMenu.CardView" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- 文本样式 -->
    <style name="TextAppearance.CafeteriaMenu.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.CafeteriaMenu.Subtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>
    
    <style name="TextAppearance.CafeteriaMenu.Body">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>